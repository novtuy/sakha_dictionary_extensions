{
  "manifest_version": 3,
  "name": "Большой толковый словарь якутского языка",
  "version": "1.0",
  "description": "Удобное расширение для работы с большим толковым словарем якутского языка",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://igi.ysn.ru/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/emblema_ysn_red.svg",
    "32": "icons/emblema_ysn_red.png",
    "48": "icons/emblema_ysn_red.png",
    "128": "icons/emblema_ysn_red.png"
  }
}
